# vim: set sts=2 ts=8 sw=2 tw=99 et ft=python:
import os

curl_ext_path = os.path.join(builder.sourcePath, 'extensions', 'curl')

os.rename(os.path.join(curl_ext_path, 'AMBuild', 'AMBuilder.curl'), os.path.join(curl_ext_path, 'curl-src' , 'lib', 'AMBuilder'))
os.rename(os.path.join(curl_ext_path, 'AMBuild', 'AMBuilder.mbedtls'), os.path.join(curl_ext_path, 'mbedtls-src' , 'library', 'AMBuilder'))
os.rename(os.path.join(curl_ext_path, 'AMBuild', 'config-sm-linux.h'), os.path.join(curl_ext_path, 'curl-src' , 'lib', 'config-sm-linux.h'))
os.rename(os.path.join(curl_ext_path, 'AMBuild', 'config-sm-mac.h'), os.path.join(curl_ext_path, 'curl-src' , 'lib', 'config-sm-mac.h'))
os.rename(os.path.join(curl_ext_path, 'AMBuild', 'config-sm-win.h'), os.path.join(curl_ext_path, 'curl-src' , 'lib', 'config-sm-win.h'))
os.replace(os.path.join(curl_ext_path, 'AMBuild', 'curl_setup.h'), os.path.join(curl_ext_path, 'curl-src' , 'lib', 'curl_setup.h'))

libcurl = builder.Build('curl-src/lib/AMBuilder')
mbedtls = builder.Build('mbedtls-src/library/AMBuilder')

for cxx in builder.targets:
  binary = SM.ExtLibrary(builder, cxx, 'webternet.ext')
  binary.compiler.includes += [
    os.path.join(curl_ext_path, 'curl-src', 'include')
  ]
  binary.compiler.defines += ['CURL_STATICLIB']
  if binary.compiler.family == 'gcc' or binary.compiler.family == 'clang':
    binary.compiler.cxxflags += ['-fno-rtti']
  elif binary.compiler.family == 'msvc':
    binary.compiler.cxxflags += ['/GR-']
  binary.compiler.postlink += [libcurl[binary.compiler.target.arch].binary]
  binary.compiler.postlink += [mbedtls[binary.compiler.target.arch].binary]
  if binary.compiler.target.platform == 'linux':
    binary.compiler.postlink += ['-lrt']
  elif binary.compiler.target.platform == 'windows':
    binary.compiler.postlink += ['ws2_32.lib']

  binary.sources += [
    'extension.cpp',
    'curlapi.cpp',
    '../../public/smsdk_ext.cpp'
  ]

  SM.extensions += [builder.Add(binary)]